{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/WebApplication/bin/Debug/netcoreapp3.1/WebApplication.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/WebApplication/",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build & prepare",
            "program": "${workspaceRoot}/src/WebApplication/bin/Debug/netcoreapp3.1/WebApplication.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/WebApplication/",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnFirstSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "runtimeArgs": [
                    "--incognito"
                ],
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:5001"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/src/SoftinuxBase.Security/Views"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "runtimeArgs": [
                "--incognito"
            ],
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}",
        },
        {
            "name": "Build only & Run",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/src/WebApplication/bin/Debug/netcoreapp3.1/WebApplication.dll",
            "args": [],
            "cwd": "${workspaceRoot}/src/WebApplication/",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnFirstSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
    ],
    "compounds": [
        {
            "name": "Launch & Debug",
            "configurations": [
                ".NET Core Launch (console)",
                "Launch Chrome"
            ]
        }
    ]
}