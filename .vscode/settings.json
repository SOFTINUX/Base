{
    "editor.formatOnSave": false,
    "dotnet-test-explorer.testProjectPath": "./src/Testing/Unit/SecurityTest",
    "dotnet-test-explorer.enableTelemetry": false,
    //"dotnet-test-explorer.pathForResultFile": "${workspaceFolder}",
    "editor.showFoldingControls": "always",
    "editor.fontLigatures": true,
    "editor.renderControlCharacters": false,
    "workbench.sideBar.location": "left",
    "workbench.activityBar.visible": true,
    "workbench.editor.titleScrollbarSizing": "large",
    "workbench.colorCustomizations": {
        "editor.lineHighlightBorder": "#75757588",
        "editor.lineHighlightBackground": "#000000",
        "tab.activeBorder": "#FFA500",
        //"tab.activeBackground": "#e9006d6c",
        //"activityBar.background": "#ff00776e",
        //"activityBar.activeBorder": "#ffffff",
        //"activityBarBadge.background": "#ff8800ef",
        //"activityBarBadge.foreground": "#000000"
        //"titleBar.activeBackground": "#791B45",
        //"titleBar.activeForeground": "#FEFCFD",
    },
    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    // Controls if suggestions should automatically show up when typing trigger characters
    "editor.suggestOnTriggerCharacters": true,
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "go",
        "handlebars",
        "html",
        "jade",
        "javascript",
        "javascriptreact",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "pub",
        "python",
        "restructuredtext",
        "rust",
        "scss",
        "text",
        "typescript",
        "typescriptreact",
        "yml"
    ],
    "cSpell.enabled": false,
    "eslint.options": {
        "configFile": ".eslintrc.json"
    },
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 350,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope" : [
                    "keyword.control.flow.return.cs"
                ],
                "settings": {
                    "fontStyle": "bold"
                }
            }
        ]
    }
}