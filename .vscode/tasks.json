{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build & prepare",
            "command": "./bp.bat",
            "linux": {
                "command": "bp.sh"
            },
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Gulp Copy DLL",
            "command": "gulp",
            "args": ["--gulpfile", "./WebApplication/gulpfile.js", "copy-extensions"],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "taskName": "Integration Tests",
            "command": "dotnet",
            "args": [
                "test",
                "SecurityTests.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Tests/SecurityTests"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "Unit Tests",
            "command": "dotnet",
            "args": [
                "test",
                "SecurityTests.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}/Tests/SecurityTests"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "TestAll",
            "dependsOn": [
                "Unit Tests",
                "Integration Tests"
            ]
        }
    ]
}