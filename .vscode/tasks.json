{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & prepare",
            "command": "./bp.bat",
            "linux": {
                "command": "./bp.sh"
            },
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build",
            "command": "dotnet",
            "args": [
                "build",
                "/property:GenerateFullPaths=true"
            ],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "command": "dotnet clean",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
        "label": "Copy dependencies",
        "command": "./bp.bat copydeps",
        "linux": {
            "command": "./bp.sh copydeps"
        },
        "type": "shell",
        "group": "build",
        "presentation": {
            "reveal": "always",
            "panel": "shared"
        },
        "problemMatcher": "$msCompile"
    }
    ]
}