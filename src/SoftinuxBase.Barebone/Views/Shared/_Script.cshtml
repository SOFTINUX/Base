@using SoftinuxBase.Infrastructure
@model SoftinuxBase.Barebone.ViewModels.Shared.Script.ScriptViewModel
@* including script with type "module" allows it to import ES6 modules *@
@{
    switch (Model.JsType)
    {
        case Script.JsType.IsModule:
            <script type="module" src="@Model.Url"></script>
            break;
        case Script.JsType.NoModule:
            <script type="nomodule" src="@Model.Url"></script>
            break;
        default:
            <script type="text/javascript" src="@Model.Url"></script>
            break;
    }
}