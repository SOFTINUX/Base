<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Authors>Benjamin Nolmans, Barbara Post</Authors>
    <Company>SOFTINUX</Company>
    <Copyright>Copyright © 2017 Softinux</Copyright>
    <Version>0.0.1</Version>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AssemblyName>SoftinuxBase.Security</AssemblyName>
    <RootNamespace>SoftinuxBase.Security</RootNamespace>
    <PackageId>SoftinuxBase.Security</PackageId>
    <PackageIconUrl></PackageIconUrl>
    <PackageProjectUrl>http://www.softinux.com/</PackageProjectUrl>
    <Configuration Condition=" '$(Configuration)' == '' ">Debug</Configuration>
  </PropertyGroup>
  <PropertyGroup>
    <LangVersion>7</LangVersion>
    <CodeAnalysisRuleSet>..\..\StyleCopRules.ruleset</CodeAnalysisRuleSet>
    <RepositoryUrl>https://github.com/SOFTINUX/Base</RepositoryUrl>
  </PropertyGroup>
  <ImportGroup Label="Documentation">
    <Import Project="..\..\documentation.props" />
  </ImportGroup>
  <ItemGroup>
    <AdditionalFiles Include="..\..\stylecop.json" />
  </ItemGroup>
  <Choose>
    <When Condition=" '$(Configuration)'=='Debug' ">
      <ItemGroup>
        <EmbeddedResource Include="Scripts\**\security_user.js" />
        <EmbeddedResource Include="Scripts\**\security_edit_user.js" />
        <EmbeddedResource Include="Scripts\**\security_user_permissions.js" />
      </ItemGroup>
    </When>
  </Choose>
  <ItemGroup>
    <None Remove="node_modules\**" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Styles\**;Scripts\**\*.min.js;Views\**" />
    <!-- JavaScript -->
    <EmbeddedResource Include="..\..\node_modules\datatables.net\js\jquery.dataTables.js" LinkBase="node_modules\datatables.net\js\" />
    <EmbeddedResource Include="..\..\node_modules\datatables.net-bs\js\dataTables.bootstrap.js" LinkBase="node_modules\datatables.net-bs\js\" />
    <EmbeddedResource Include="..\..\node_modules\datatables.net-select\js\dataTables.select.min.js" LinkBase="node_modules\datatables.net-select\js\" />
    <EmbeddedResource Include="..\..\node_modules\datatables.net-buttons\js\dataTables.buttons.min.js" LinkBase="node_modules\datatables.net-buttons\js\" />
    <EmbeddedResource Include="..\..\node_modules\datatables.net-buttons-bs\js\buttons.bootstrap.min.js" LinkBase="node_modules\\datatables.net-buttons-bs\js\" />
    <!-- Css -->
    <EmbeddedResource Include="..\..\node_modules\datatables.net-bs\css\dataTables.bootstrap.css" LinkBase="node_modules\datatables.net-bs\css\" />
    <EmbeddedResource Include="..\..\node_modules\datatables.net-select-bs\css\select.bootstrap.min.css" LinkBase="node_modules\datatables.net-select-bs\css\" />
    <EmbeddedResource Include="..\..\node_modules\datatables.net-buttons-bs\css\buttons.bootstrap.min.css" LinkBase="node_modules\datatables.net-buttons-bs\css\" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\SoftinuxBase.Barebone\SoftinuxBase.Barebone.csproj" />
    <ProjectReference Include="..\SoftinuxBase.Infrastructure\SoftinuxBase.Infrastructure.csproj" />
    <ProjectReference Include="..\SoftinuxBase.Security.Data.EntityFramework\SoftinuxBase.Security.Data.EntityFramework.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <DotNetCliToolReference Include="BundlerMinifier.Core" Version="2.9.406" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Views\Shared\Components\GrantPermissions\" />
  </ItemGroup>
</Project>