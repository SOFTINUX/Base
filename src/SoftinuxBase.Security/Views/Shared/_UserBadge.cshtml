@using Microsoft.AspNetCore.Identity
@using Security.Data.Entities

@inject UserManager<User> UserManager
@{
     var firstName = "";
     var lastName = "";
     var  loggedInUser = User != null ? await @UserManager.GetUserAsync(User) : null;
     if(loggedInUser != null)
     {
         firstName = loggedInUser.FirstName;
         lastName = loggedInUser.LastName;
     }
 }

@* User Account Menu *@
<li class="dropdown user user-menu">
    @* Menu Toggle Button *@
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        @* The user image in the navbar*@
        <img src="/img/profile-circle2-128.png" class="user-image" alt="User Image">
        @* hidden-xs hides the username on small devices so only the image appears. *@
        <span class="hidden-xs">@firstName&nbsp;@lastName</span>
    </a>
    <ul class="dropdown-menu">
        @* The user image in the menu *@
        <li class="user-header">
            <img src="/img/profile-circle2-128.png" class="img-circle" alt="User Image">
            <p>
                @firstName&nbsp;@lastName
                @* - Web Developer
        <small>Member since Nov. 2012</small> *@
            </p>
        </li>
        @* Menu Body *@
        @*<li class="user-body">
                 <div class="row">
