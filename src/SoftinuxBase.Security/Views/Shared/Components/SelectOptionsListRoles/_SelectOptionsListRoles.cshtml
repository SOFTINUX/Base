@model (Microsoft.AspNetCore.Identity.RoleManager<Microsoft.AspNetCore.Identity.IdentityRole<string>> roleManager, HashSet<string> permissionList)

<option></option>
@* here roles list *@
@foreach (var role in Model.roleManager.Roles)
{
    <option value="@Html.Raw(role.Name)" data-id="@Html.Raw(role.Id)" @(Model.permissionList.Contains(role.Id) ? null : Html.Raw("data-icon-base=\"fas\" data-icon=\"fa-unlink\""))>@Html.Raw(role.Name)</option>
}
