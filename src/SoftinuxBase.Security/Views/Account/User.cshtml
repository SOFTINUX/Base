@using Microsoft.AspNetCore.Identity
@using SoftinuxBase.Security.Data.Entities

@inject UserManager<User> UserManager

@section title
{
    <h2>User Profile</h2>
}

@{
    User user_ = UserManager.GetUserAsync(User).Result;
}

<div class="row">
    <div class="col-md-3">
        @Html.Partial("_User_Profile_Details_Card", user_)
    </div>
    <div class="col-md-9">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#details" data-toggle="tab">Detail</a>
                </li>
                <li>
                    <a href="#groups" data-toggle="tab">Groups</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="active tab-pane" id="details">
                    @Html.Partial("_User_Profile_Details", user_)
                </div>
                <div class="tab-pane" id="groups">
                    <h3><i class="fa fa-users" aria-hidden="true"></i>&nbsp;&nbsp;My Groups</h3>
                    <h4>My Claims</h4><br/>
                    @Html.Partial("_ListClaims")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        browseForAvatar();
    </script>

    <script type="text/javascript" src="/Scripts/security_edit_user.js"></script>
}
