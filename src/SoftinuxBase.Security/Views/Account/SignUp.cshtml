@using Infrastructure
@using Microsoft.AspNetCore.Authentication
@using Microsoft.Extensions.Options
@model SoftinuxBase.Security.ViewModels.Account.SignUpViewModel

@inject IOptions<CorporateConfiguration> OptionsApplicationConfiguration

<div class="register-box">
  <div class="register-logo">
    <a href="#">
        <img src="/img/@Html.Raw(OptionsApplicationConfiguration.Value.BrandLogo)" class="brandlogo-image singin-brandlogo-image" alt="User Image">
        <br/>
        <strong>SOFTINUX</strong>
    </a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>

    <form method="post" id="registerform">
      <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Login " asp-for="UserName">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        <span asp-validation-for="UserName" class="help-block validation-error"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="email" class="form-control" placeholder="Email" asp-for="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Email" class="help-block validation-error"></span>
      </div>
      <div class="form-group has-feedback">
        <input type="password" class="form-control" placeholder="Password" asp-for="Password">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Password" class="help-block validation-error"></span>
      </div>
      <div class="row">
        <div class="col-xs-8">
          <div class="checkbox icheck">
            <label class="">
              <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;"><input type="checkbox" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins></div> I agree to the <a href="#">terms</a>
            </label>
          </div>
        </div>
        @* /.col *@
        <div class="col-xs-4">
          <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
        </div>
        @* /.col *@
      </div>
    </form>

    @*
    <div class="social-auth-links text-center">
      <p>- OR -</p>
      <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fa fa-facebook"></i> Sign up using
        Facebook</a>
      <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fa fa-google-plus"></i> Sign up using
        Google+</a>
    </div>
    *@

    <a href="/account/signin" class="text-center">I already have a membership</a>
  </div>
  @* /.form-box *@
</div>

@section ScriptsUnauthenticated {
  <script type="text/javascript">
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
  </script>
}
