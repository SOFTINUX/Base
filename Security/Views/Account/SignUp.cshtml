@using Infrastructure
@using Microsoft.AspNetCore.Authentication
@using Microsoft.Extensions.Options
@model Security.Data.Entities.User

@inject IOptions<CorporateConfiguration> OptionsApplicationConfiguration

<div class="register-box">
  <div class="register-logo">
    <a href="#"><img src="/img/@Html.Raw(OptionsApplicationConfiguration.Value.BrandLogo)" class="brandlogo-image singin-brandlogo-image" alt="User Image">
            <br/><strong>SOFTINUX</strong></a>
  </div>

  <div class="register-box-body">
    <p class="login-box-msg">Register a new membership</p>

    <form method="post" id="registerform">
      <div class="row">
        <label for="inputFirstname" class="col-sm-4 control-label">First Name</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="inputFirstname" placeholder="First Name" asp-for="FirstName" />
        </div>
      </div>
      <div class="row">
          <label for="inputLastname" class="col-sm-4 control-label">Last Name</label>
          <div class="col-sm-8">
              <input type="text" class="form-control" id="inputLastname" placeholder="Last Name" asp-for="LastName" />
          </div>
      </div>
      <div class="row">
          <label for="inputEmail" class="col-sm-4 control-label">Email</label>
          <div class="col-sm-8">
              <input type="tel" class="form-control" id="inputEmail" placeholder="Email" asp-for="Email" />
          </div>
      </div>
      <div class="row">
          <label for="inputPhone" class="col-sm-4 control-label">Phone</label>
          <div class="col-sm-8">
              <input type="text" class="form-control" data-inputmask="mask: +32(9[99])[9]99-99-99" data-mask="" placeholder="Phone" asp-for="PhoneNumber">
          </div>
      </div>
      
      <div class="row">
        <div class="col-xs-4">
        <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
        </div>
      </div>

      </div>
    </form>

    <div asp-validation-summary="All" class="text-danger"></div>
    @* here OAuth button if needed *@

    <a href="/account/signin" class="text-center">I already have a membership</a>
  </div>
  @* /.form-box *@
</div>