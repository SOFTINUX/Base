@{
    ViewBag.currentUrl = Context.Request.QueryString.ToUriComponent();
}
@section title {
    <h2>Access Denied</h2>
}

<section class="dashboard-section">
    <div class="container-fluid">
        <div class="row bg-white has-shadow">
            <div class="col-xl-3">

            </div>
            <div class="col-xl-3">
                <div class="item d-flex align-items-center">
                    <div class="alert alert-danger" role="alert">
                        You don't have access to <strong>@(ViewBag.currentUrl)</strong>
                    </div>
                </div>
            </div>
            <div class="col-xl-3">

            </div>
        </div>
    </div>
</section>

