@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section title {
    <h2>Users List</h2>

}
<div class="row">
    <div class="col-md-12">
        @* .box *@
        <div class="box">
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 10px">#</th>
                            <th>Name</th>
                            <th>Guid</th>
                            <th>Modify</th>
                            <th>Delete</th>
                        </tr>
                        @{
                            int counter = 1;
                            foreach (var item in ViewBag.userlist)
                            {
                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>
                                        @item.Text
                                    </td>
                                    <td>
                                        @item.Value
                                    </td>
                                    <td>
                                        <button class="btn center-cell-button"><i class="fa fa-edit"></i></button>
                                    </td>
                                    <td>
                                        <button class="btn btn-danger center-cell-button"><i class="fa fa-trash-o"></i></button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @* /.box *@
    </div>
</div>
