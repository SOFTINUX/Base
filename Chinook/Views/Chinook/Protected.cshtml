@section title {
    <h2>Chinook Initialize Data</h2>
}

@Html.ActionLink("Create and fill database tables", "Init", "Chinook")

@{
    if (true == ViewBag.InitDone)
    {
        if (!String.IsNullOrEmpty(ViewBag.InitResult))
        {
            <p style="color:red">@(ViewBag.InitResult)</p>
        }
        else
        {
            <p style="color:green">Data initialization OK</p>
        }
    }
}

