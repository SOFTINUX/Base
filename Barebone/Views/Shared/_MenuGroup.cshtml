@using System.Linq
@using Microsoft.AspNetCore.Mvc.Rendering
@model Barebone.ViewModels.Shared.MenuGroup.MenuGroupViewModel

@if (Model.MenuItems.Count() == 1)
{
    @Html.Partial("_MenuItem", Model.MenuItems.First())
}
else
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@(Model.Name)<span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (var menuItem in this.Model.MenuItems)
                {
                    Html.Partial("_MenuItem", menuItem);
                }
        </ul>
    </li>

}


