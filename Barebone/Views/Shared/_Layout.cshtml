<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>@Html.Raw(this.ViewBag.Title as string)</title>
  @await Component.InvokeAsync("StyleSheets")
  @await Component.InvokeAsync("Scripts")
</head>
<body>
<div>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*TODO replace "Softinux" by some value that comes from application configuration (need a model?) *@
                <a class="navbar-brand" href="#">Softinux</a>
            </div>*
        
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @await Component.InvokeAsync("Menu")

                </ul>
            </div>

        </div>
    </nav>
    <h1>
        Demo
    </h1>
    <div>
        @RenderBody()
    </div>
</div>
</body>
</html>